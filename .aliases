# Aliases
alias grep='grep --color=auto'
alias ls='ls -h --color=auto'

alias install='yaourt -S'
alias remove='yaourt -Rsn'
alias search='pacman -Ss'
alias ssearch='yaourt -Ss'
alias update='yaourt -Syyua'

alias ll='ls -lh'
alias lla='ls -lah'
alias du='du -c -h'
alias df='df -h'

alias cp='cp -i'
alias mv='mv -i'
alias rm='rm --one-file-system -i'

alias mount-domain='sshfs user@domain.com:/home/user /media/domain'
alias unmount-domain='fusermount -u /media/domain'

alias screen-off='xset dpms force off'

alias visualvm='visualvm --jdkhome /usr/lib/jvm/java-8-oracle'
