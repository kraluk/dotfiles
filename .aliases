# Aliases
alias grep='grep --color=auto'
alias ls='ls -h --color=auto'

alias install='sudo apt install'
alias remove='sudo apt purge'
alias search='apt search'
alias update='sudo apt update && sudo apt upgrade && sudo apt autoremove'

alias ll='ls -lh'
alias lla='ls -lah'
alias du='du -c -h'
alias df='df -h'

alias cp='cp -i'
alias mv='mv -i'
alias rm='rm --one-file-system -i'

alias screen-off='xset dpms force off'

alias visualvm='visualvm --jdkhome /usr/lib/jvm/default-java'

alias big-dirs='find . -type d -print0 | xargs -0 du | sort -n | tail -10 | cut -f2 | xargs -I{} du -sh {}'
alias big-files='find . -type f -print0 | xargs -0 du | sort -n | tail -10 | cut -f2 | xargs -I{} du -sh {}'
