# wallpaper
exec_always --no-startup-id feh --bg-scale /home/lukasz/Images/Wallpapers/_wallpaper.jpg

# Scratchpad
bindsym $mod+Shift+a move scratchpad
bindsym $mod+a scratchpad show

# Transparency
exec --no-startup-id compton -f --sw-opti
exec --no-startup-id compton --opengl --sw-opti -f -D35 -I0.2 -O0.2

# i3-gaps
gaps inner 10
gaps outer 0  
for_window [class="^.*"] border pixel 2
smart_borders yes
